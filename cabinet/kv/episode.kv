<ESpinnerOption>:
    background_normal: ''
    markup: True
    canvas.before:
        Color:
            rgba: (254/255., 255/255., 255/255., 1)
        Rectangle:
            size: self.size
            pos: self.pos


<EpisodeSummaryBox>:
    orientation: "vertical"
    padding: dp(5), dp(5)
    InfoLabelMedium:
        halign: 'center'
        font_size: dp(16)
        valign: 'middle'
        text: '[color=0000]{}[/color]'.format(root.product_line)
    InfoLabelMedium:
        halign: 'center'
        font_size: dp(16)
